<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakePayment">

    <View
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/baseline_arrow_back_24" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Make Payment"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="140dp"
        android:orientation="horizontal"
        android:id="@+id/li">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beverages chosen : "
            android:textSize="20dp"
            android:id="@+id/Beverage"/>

        <TextView
            android:id="@+id/Beverage_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:id="@+id/li1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket details(no.of tickets) : "
            android:textSize="20dp"
            android:id="@+id/Ticket"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/Ticket_no"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li1"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:id="@+id/li2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total amount : "
            android:textSize="20dp"
            android:id="@+id/Total_amount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="200"
            android:id="@+id/amount"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li2"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:id="@+id/li3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Apply Coupon : "
            android:id="@+id/coupon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="100"
            android:id="@+id/coupon_amount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/li3"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:id="@+id/li4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Final Amount : "
            android:id="@+id/Final_amount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="750"
            android:id="@+id/f_amount"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Payment Option : "
        android:textSize="23dp"
        android:layout_below="@id/li4"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20dp"
        android:id="@+id/payment_options"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@id/li4">


        <Button
            android:id="@+id/google_pay"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="2dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Google Pay"></Button>

        <Button
            android:id="@+id/Phone_pay"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginLeft="2dp"
            android:text="Phone Pay"></Button>

        <Button
            android:id="@+id/Paytm"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Paytm"></Button>


    </LinearLayout>

    <Button
        android:id="@+id/PAY"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30sp"
        android:backgroundTint="#00BCD4"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@color/white"
        android:text="PAY"/>

</RelativeLayout>

